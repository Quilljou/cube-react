{
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "types": [
      "react",
      "react-dom",
      "classnames",
      "jest",
      "enzyme"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
